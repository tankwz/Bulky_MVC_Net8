@page
@model Razor_temp.Pages.Categories.IndexModel
@{
}
<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i>&nbsp; Create New Category</a>
        </div>
    </div>

    <table class="table table-bordered table-striped ">
        <thead>
            <tr>
                <th class="text-light">
                    Category Name
                </th>
                <th class="text-light">
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td class="text-light">
                        @obj.Name
                    </td>
                    <td class="text-light">@obj.DisplayOrder</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i> &nbsp Edit</a>
                            <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> &nbsp Delete</a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>