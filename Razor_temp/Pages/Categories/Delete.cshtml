@page
@model Razor_temp.Pages.Categories.DeleteModel
@{
}
<form method="post">
    <input asp-for="category.Id" hidden></input>
    <div class="border p-3 mt-4 ">
        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 p-1">
            <label asp-for="category.Name" class="mb-1 p-0"></label>
            <input asp-for="category.Name" disabled class="form-control"></input>
        </div>
        <div class="mb-3 p-1">
            <label asp-for="category.DisplayOrder" class="mb-1 p-0"></label>
            <input asp-for="category.DisplayOrder" disabled class="form-control"></input>
            

        </div>

        <div class="row p-1">
            <div class="col-6 col-md-3">
                <a asp-page="Index" class="btn btn-secondary border form-control">Back</a>
            </div>
            <div class="col-6 col-md-3 text-end">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
        </div>
    </div>
</form>

