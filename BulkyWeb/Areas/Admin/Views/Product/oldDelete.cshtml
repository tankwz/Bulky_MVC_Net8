@model Product

    <input asp-for="Id" hidden></input>
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2">Delete Product</h2>
                </div>
            </div>
        </div>

    <div class="card-body p-4 border-2">
        <form method="post">
            <input asp-for="Id" hidden></input>
            <div class="border p-3 my-4">
                <div class="input-group">
                    <div class="mb-3 p-1">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" type="text"></input>
                    </div>
                    <div class="mb-3 p-1">
                        <label asp-for="ISBN" class="form-label"></label>
                        <input asp-for="ISBN" class="form-control" type="text"></input>
                    </div>
                    <div class="mb-3 p-1">
                        <label asp-for="Author" class="form-label"></label>
                        <input asp-for="Author" class="form-control" type="text"></input>

                    </div>
                </div>

                <div class="input-group">
                    <div class="mb-3 p-1">
                        <label asp-for="ListPrice" class="form-label"></label>
                        <input asp-for="ListPrice" class="form-control" type="text"></input>

                    </div>
                    <div class="mb-3 p-1">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" type="text"></input>

                    </div>
                    <div class="mb-3 p-1">
                        <label asp-for="Price50" class="form-label"></label>
                        <input asp-for="Price50" class="form-control" type="text"></input>

                    </div>
                    <div class="mb-3 p-1">
                        <label asp-for="Price100" class="form-label"></label>
                        <input asp-for="Price100" class="form-control" type="text"></input>

                    </div>
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" type=""></textarea>

                </div>
                <div class="row p-1 justify-content-between">
                    <div class="col-3  ">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back</a>
                    </div>
                    <div class="col-3 ">
                        <button class="btn btn-danger form-control ">Delete</button>
                    </div>

                </div>
            </div>
        </form>
    </div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


