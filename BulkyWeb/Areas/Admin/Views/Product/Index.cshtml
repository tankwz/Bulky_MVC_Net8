@model List<Product>
<div class="card shadow border-0 mt-4 ">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Product List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row">
            <div class="col-6"></div>

            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="UpSert" class=" btn btn-primary w-50 mb-3 ">
                    <i class="bi bi-plus-circle"></i>&nbsp; Add new product
                </a>

            </div>
        </div>
        <div class=" align-middle ">
            <table id="tblData" class="table table-dark table-bordered  table-striped table-hover align-middle "style="width:100%">
                <thead class="align-middle text-center">
                    <tr class="">
                        <th>Title</th>
                        <th>ISBN</th>
                        @*<th>List Price</th> *@
                        <th>Price</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th></th>
                        @*<th class="">Price for 50-100</th>
                        <th>Price for 100+</th> *@
                    </tr>
                </thead>
            </table>
        </div>



    </div>
</div>

@section Scripts{
    <script src="~/js/product.js">
       
    </script>
}
