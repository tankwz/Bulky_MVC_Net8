@* @model OrderVM

 *@

<div class="card">
    <div class=" card-header bg-gradient text-center py-4">
        <div class="row">
            <div class="col-12">
                <h2>Order List</h2>
            </div>
        </div>
    </div>
    <div class="card-body">

        <div class="row d-flex justify-content-end">
            <div class="col-12">
                <div class="d-flex">
                    <ul class="list-group list-group-horizontal ms-auto mb-2">
                        <li class="list-group-item">
                            <a class="text-decoration-none text-white" asp-area="admin" asp-controller="order" asp-action="index" asp-route-status="ab">Item 1</a>
                        </li>
                        <li class="list-group-item">
                            <a style="text-decoration: none; color:aliceblue;" asp-area="admin" asp-controller="order" asp-action="index" asp-route-status="cd">Item 2</a>
                        </li>
                        <a style="text-decoration: none" asp-area="admin" asp-controller="order" asp-action="index" asp-route-status="ef">
                            <li class="list-group-item">
                            Item 3
                            </li>
                        </a>

                    </ul>
                </div>
            </div>
        </div>

        <table class="table table-dark table-border table-striped table-hover align-middle" id="adminOrderTable">
            <thead class="">
                <tr class="">
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th> 
                        Email 
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Order Status
                    </th>
                    <th>
                        Payment Status
                    </th>
                    <th>
                        Order Total
                    </th>
                    <th></th>
                </tr>
            </thead>


        </table>
    </div>
    <div class="w-75 ">
        <a href="/admin/order/details?orderId=${data}" class="btn btn-primary mx-2"><i class="bi bi-layout-text-window-reverse"></i> Details</a>
    </div> 

</div>

@section Scripts{

    <script src="~/js/order.js"></script>
}
                    