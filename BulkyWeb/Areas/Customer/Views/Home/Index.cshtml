@{
    ViewData["Title"] = "Home Page";
}

@model List<Product>

<div class=" row ">

    @foreach (var p in Model)
    {
        <div class="col-sm-6 col-lg-3 ">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card shadow border-5 rounded">
                        <div class="row">
                            <div class="col-12" >
                                <img src="@p.ImageUrl" class="card-img-top img-fluid" style="height:150px; object-fit:cover;"></img>
                            </div>
                        </div>
                        <div class="card-body pb-0">
                            <div>
                                <p class="card-title text-center bg-secondary p-1  rounded-1 text-uppercase ">
                                    @p.Title
                                </p>
                                <p class="card-title text-center text-info bg-secondary rounded-1">
                                    <span class="text-muted">by</span> <b>@p.Author</b>
                                </p>
                            </div>
                            <div class="">
                                <p class=""> </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>








