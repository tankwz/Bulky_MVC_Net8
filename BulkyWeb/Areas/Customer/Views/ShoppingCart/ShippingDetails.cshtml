@model OrderHead
<form method="post">
    <div class="card">
        <div class="card-header bg-gradient p-3 h2 text-info">Edit Shipping Details</div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="row">

                        <div class="col-12 mt-2">
                            <div class="col-12">
                                <h5>Shipping Details:</h5>
                            </div>
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.Name" class="col-form-label "></label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.Name" class="form-control py-1 bg-secondary text-white"></input>
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.PhoneNumber" class="col-form-label ">Phone</label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.PhoneNumber" class="form-control py-1 bg-secondary text-white"></input>
                                    <span asp-validation-for="PhoneNumber"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.StressAddress" class="col-form-label "></label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.StressAddress" class="form-control py-1 bg-secondary text-white"></input>
                                    <span asp-validation-for="StressAddress"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.City" class="col-form-label "></label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.City" class="form-control py-1 bg-secondary text-white"></input>
                                    <span asp-validation-for="City"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.State" class="col-form-label "></label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.State" class="form-control py-1 bg-secondary text-white"></input>
                                    <span asp-validation-for="State"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.PostalCode" class="col-form-label ">Postal Code</label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.PostalCode" class="form-control py-1 bg-secondary text-white"></input>
                                    <span asp-validation-for="PostalCode"></span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
      
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-9 align-items-center d-flex">
                    <p class="m-0 text-info" style="font-size: 14px" >
                     
                    </p>
                </div>
                <div class="col-12 col-md-3">
                    <button class="btn btn-primary form-control" type="submit">Edit</button>
                </div>
            </div>
        </div>
</form>