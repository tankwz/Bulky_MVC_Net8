@model ShoppingCartVM
<form method="post">
    <div class="card">
        <div class="card-header bg-gradient p-3">Summary</div>
        <div class="card-body">
            <div class="row">
                <div class="col-7">
                    <div class="row">
                        <div class="col-12">
                            <h5>Shipping Details:</h5>
                        </div>
                        <div class="col-12 mt-2">
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.OrderHead.AppUser.Name" class="col-form-label "></label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.OrderHead.AppUser.Name" class="form-control py-1 "></input>
                                    <span asp-validation-for="OrderHead.AppUser.Name"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.OrderHead.AppUser.PhoneNumber" class="col-form-label ">Phone</label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.OrderHead.AppUser.PhoneNumber" class="form-control py-1 "></input>
                                    <span asp-validation-for="OrderHead.AppUser.PhoneNumber"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.OrderHead.AppUser.StressAddress" class="col-form-label "></label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.OrderHead.AppUser.StressAddress" class="form-control py-1 "></input>
                                    <span asp-validation-for="OrderHead.AppUser.StressAddress"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.OrderHead.AppUser.City" class="col-form-label "></label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.OrderHead.AppUser.City" class="form-control py-1 "></input>
                                    <span asp-validation-for="OrderHead.AppUser.City"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.OrderHead.AppUser.State" class="col-form-label "></label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.OrderHead.AppUser.State" class="form-control py-1 "></input>
                                    <span asp-validation-for="OrderHead.AppUser.State"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-3">
                                    <label asp-for="@Model.OrderHead.AppUser.PostalCode" class="col-form-label ">Postal Code</label>
                                </div>
                                <div class="col-8 d-flex align-items-center">
                                    <input asp-for="@Model.OrderHead.AppUser.PostalCode" class="form-control py-1 "></input>
                                    <span asp-validation-for="OrderHead.AppUser.PostalCode"></span>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-5">
                    <div class="row">
                        <div class="col-12">
                            <h5>Order Summary:</h5>
                        </div>
                        <div>
                            <ul class="list-group">
                                @foreach (var cart in Model.ListCarts)
                                {
                                    <li class="list-group-item">
                                        <div>
                                            @cart.Product.Title
                                        </div>
                                    </li>
                                }

                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
</form>