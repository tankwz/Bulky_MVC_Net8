@model List<Category>


<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category
            </h2>
        </div>
        <div class="col-6 text-end" >
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i>&nbsp; Create New Category</a>
        </div>
    </div>

    <table class="table table-bordered table-striped ">
        <thead>
            <tr>
                <th class="text-light">
                    Category Name
                </th>
                <th class="text-light">
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td class="text-light">
                        @obj.Name
                    </td>
                    <td class="text-light">@obj.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>